# =========================
# MITDS Environment Configuration
# =========================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =========================
# PostgreSQL Configuration
# =========================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mitds
POSTGRES_USER=mitds
POSTGRES_PASSWORD=your-secure-password

# =========================
# Neo4j Configuration
# =========================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# =========================
# Redis Configuration
# =========================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# =========================
# S3-Compatible Storage (MinIO)
# =========================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=mitds-raw
S3_REGION=us-east-1
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# =========================
# Data Source API Keys
# =========================
# OpenCorporates API (https://api.opencorporates.com/documentation/API-Reference)
OPENCORPORATES_API_KEY=your-opencorporates-api-key

# Meta Ad Library API (https://www.facebook.com/ads/library/api/)
META_APP_ID=your-facebook-app-id
META_APP_SECRET=your-facebook-app-secret
META_ACCESS_TOKEN=your-facebook-access-token

# =========================
# Application Settings
# =========================
# Environment: development, staging, production
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-key-change-in-production

# =========================
# Celery Configuration
# =========================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =========================
# Logging
# =========================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =========================
# Feature Flags
# =========================
ENABLE_META_ADS_INGESTION=false
ENABLE_OPENCORPORATES_INGESTION=false

